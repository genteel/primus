<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
  <persistence-unit name="PrimusPU" transaction-type="JTA">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <jta-data-source >primusdb</jta-data-source>
    
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="eclipselink.ddl-generation" value="create-tables"/>
      <!--<property name="" value="8000"/>-->
      <!--<property name="javax.persistence.query.timeout" value="ForeignKeyDeleteAction=restrict, JoinForeignKeyDeleteAction=restrict"/>-->
    </properties>
  </persistence-unit>
</persistence>
