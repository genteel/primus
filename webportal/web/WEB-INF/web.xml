<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <listener>
        <listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>
    </listener>
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/primusApplicationContext.xml</param-value>
    </context-param>
    <context-param>
        <param-name>log4jConfigLocation</param-name>
        <param-value>/WEB-INF/log4j.properties</param-value>
    </context-param>
    <servlet>
        <servlet-name>ctest</servlet-name>
        <servlet-class>com.primus.controller.test</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewSwitchingServlet</servlet-name>
        <servlet-class>com.primus.servlets.ViewSwitchingServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminServlet</servlet-name>
        <servlet-class>com.primus.servlets.AdminServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.primus.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminAjaxServlet</servlet-name>
        <servlet-class>com.primus.servlets.AdminAjaxServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StudentAjaxServlet</servlet-name>
        <servlet-class>com.primus.servlets.StudentAjaxServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PullData</servlet-name>
        <servlet-class>com.primus.servlets.PullData</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.primus.servlets.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>report</servlet-name>
        <servlet-class>com.primus.controller.report</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FileDownloadServlet</servlet-name>
        <servlet-class>com.primus.servlets.FileDownloadServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LecturerAjaxServlet</servlet-name>
        <servlet-class>com.primus.servlets.LecturerAjaxServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DesktopClientServlet</servlet-name>
        <servlet-class>com.primus.servlets.DesktopClientServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>text</servlet-name>
        <servlet-class>com.primus.servlets.text</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SettingsServlet</servlet-name>
        <servlet-class>com.primus.servlets.SettingsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FileUploadServlet</servlet-name>
        <servlet-class>com.primus.servlets.FileUploadServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ctest</servlet-name>
        <url-pattern>/ctest</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewSwitchingServlet</servlet-name>
        <url-pattern>/view</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminServlet</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminAjaxServlet</servlet-name>
        <url-pattern>/admin/ajax</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StudentAjaxServlet</servlet-name>
        <url-pattern>/student/ajax</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PullData</servlet-name>
        <url-pattern>/admin/pull</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>report</servlet-name>
        <url-pattern>/report</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FileDownloadServlet</servlet-name>
        <url-pattern>/student/download</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LecturerAjaxServlet</servlet-name>
        <url-pattern>/lecturer/ajax</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DesktopClientServlet</servlet-name>
        <url-pattern>/DesktopClientServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>text</servlet-name>
        <url-pattern>/text</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SettingsServlet</servlet-name>
        <url-pattern>/settings</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FileUploadServlet</servlet-name>
        <url-pattern>/lecturer/upload</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            60
        </session-timeout>
    </session-config>
    <persistence-unit-ref>
        <persistence-unit-ref-name>persistence/PrimusPU</persistence-unit-ref-name>
        <persistence-unit-name>PrimusPU</persistence-unit-name>
    </persistence-unit-ref>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
